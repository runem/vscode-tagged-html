{
  "name": "root",
  "private": true,
  "scripts": {
    "install:safe": "lerna run install:safe --stream",
    "prettier:check": "prettier --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "prettier --write \"src/**/*.{ts,tsx}\"",
    "dev": "cd dev && TSS_LOG=\"-traceToConsole true -level verbose -file $(pwd)/ts-server-log.txt\" TSS_DEBUG=5999 code .",
    "dev:logs": "touch dev/lit-plugin.log && tail -f dev/lit-plugin.log",
    "lint": "tslint --project ./"
  },
  "devDependencies": {
    "lerna": "^3.13.4"
  }
}
